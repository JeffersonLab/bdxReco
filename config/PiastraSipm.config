#Configuration file for BDX data reconstruction.

#System parameters
MC		0
JANA_CALIB_CONTEXT "variation=streaming_EEE"
THREAD_TIMEOUT 300
THREAD_TIMEOUT_FIRST_EVENT 300

#IntVeto wave integration parameters
INTVETO:MIN_TOT  12    #min tot in ns to consider a pulse
INTVETO:THR	 0.5       #min amplitude of a pulse -in phe units
INTVETO:NPED     40        #num of ns samples in pedestal determination event by event
INTVETO:NSB	 20        #num of ns before the maximum
INTVETO:NSA	 30        #num of ns after  the maximum


INTVETO:HIT_THR_SINGLE   0.5   #thr in phe charge for a detector with single readout
INTVETO:HIT_THR_MULTI   5   #thr in phe charge for a detector with multiple readout
INTVETO:HIT_DT_MULTI    200  #time-window coincidence for hits in a counter with multiple readout 
INTVETO:HIT_N_MULTI     2     #multiplicity for a detector with multi readout 

INTVETO:VERBOSE  3
